@model RocloWebApp.Models.admin.Admin

@{
    ViewData["Title"] = "Ajouter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ajouter</h1>

<h4>Admin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Ajouter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
